FROM baseimage:latest

WORKDIR /workspace/sgfuzz-for-fprime

# 로컬 스크립트 및 파일 복사
COPY Sources/entrypoint.sh /usr/local/bin/entrypoint.sh
COPY scripts/ /workspace/sgfuzz-for-fprime/scripts/

# 줄 끝 문자 변환 및 권한 설정
RUN dos2unix /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh
RUN chmod +x /workspace/sgfuzz-for-fprime/scripts/*.py 2>/dev/null || true

# 컨테이너 실행 시 libFuzzer 컴파일 및 실행
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]